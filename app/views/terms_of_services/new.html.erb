<div>
	<h3>Terms of Service</h3>
</div>

<div class="container" style="text-align: center">
	<%= @content.as_html("terms_of_service") %>
</div>

<%= simple_form_for @terms_of_service do |f| %>
	<%= f.input :terms_of_service, :as => :boolean, label: "I have read and agree to the SafeSpace user/member terms and conditions" %>
	<div class="submit-button"><%= f.submit "Submit", class: "btn btn-success" %></div>
<% end %>
