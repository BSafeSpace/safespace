<% publish_to '/about' do %>
	var sender_id = "<%= @message.user.id %>";
    var current_id = $('meta[name=user-id]').attr("content");

    if(sender_id != current_id){
		$("#msg").append("<%= j render 'receiver' %>");
		$('.message').last().focus();
	}
	else{
		$("#msg").append("<%= j render 'sender' %>");
		$('.message').last().focus();
	}

	if(sender_id != current_id){
		$("#notif").append("<%= j render 'notif' %>");
	}
<% end %>
$("#new_message")[0].reset();