<% @messages.each do |message| %>
  <% if message.body %>
      <% user = User.find(message.user.id) %>
        <div style="text-align:left">
            <% if !@last_user.id.eql? user.id %>
              <div class="message-time">
                 <small class="text-muted"><%= message.message_time %></small> 
              </div>
              <b class="message-username"> <%= user.username %></b>
            <% end %>   
            <div class="message-container">
                <div class="message" id="other-message" data-message-id="<%= message.id.to_s %>"><%= message.body %></div>
            </div>
        </div>
  <%end%>
 <%end%>
            