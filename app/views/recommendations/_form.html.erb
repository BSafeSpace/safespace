<!-- Modal -->
<div class="modal fade" id="recommendModal" tabindex="-1" role="dialog" aria-labelledby="recommendModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Recommendation</h4>
      </div>
      <div class="modal-body">
        <%= form_for :recommendation, url: {controller: 'recommendations', action: 'create'}, remote: true do |f| %>
			<%= f.label :reason, "Reason: ", :class => 'control-label' %>
			<%= f.text_field :reason, :class => "form-control" %>

			<%= f.label :additional_info, "Additional Information: ", :class => 'control-label' %>
			<%= f.text_field :additional_info, :class => "form-control" %>

			<%= f.hidden_field :user_id, value: other_user_id %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
           <%= f.submit "Submit recommendation", class: "btn btn-success" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


