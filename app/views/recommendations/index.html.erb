<br>
<table id="rec-table" class="table table-striped table-bordered table-condensed">
    <thead>
        <th>Username</th>
        <th>Reason</th>
        <th>Additional Information</th>
    </thead>

    <tbody>
		<% @recommendations.each do |rec| %>
			<% @rec_user = rec.get_user %>
	    	<%= render partial: "rec_row", recommendation: rec, rec_user: @rec_user %>
		<% end %>
    </tbody>
</table>

<%= subscribe_to "/recommendations/new" %>