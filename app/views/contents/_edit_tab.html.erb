<div class="edit-content-tab" align="center">
	<div class="row">
		<div class="col-md-6">
			<h3>Preview</h3>
			<div id="preview-<%= tag %>" class="preview-content">
				<%= body %>
			</div>
		</div>

		<div class="col-md-6">
			<h3>Edit</h3>
			<div style="margin-top: 15px">
				<%= form_for(@content) do |f| %>
					<%= f.text_area name, rows: "18", class: "content-text-area" %><br>
					<%= hidden_field_tag :content_tag, tag %>
					<%= hidden_field_tag :content_name, name %>
					<%= f.submit "Submit", class: "btn btn-default btn-lg" %>
				<% end %>
			</div>
		</div>
	</div>
</div>