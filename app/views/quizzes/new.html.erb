<h3>Protocol Quiz</h3>
<hr style="margin-top: 10px;">

<div class="form">
	<%= simple_form_for @quiz do |f| %>
		
		<%= f.input :answer1, label: "Question 1", collection: ["wrong Lorem dim sum Jin deui Chicken feet Potstickers stir fried radish cake Steamed Bun with Butter Cream hot", "wrong Lorem dim sum Jin deui Chicken feet Potstickers stir fried radish cake Steamed Bun with Butter Cream hot", "wrong Lorem dim sum Jin deui Chicken feet Potstickers stir fried radish cake Steamed Bun with Butter Cream hot", "wrong Lorem dim sum Jin deui Chicken feet Potstickers stir fried radish cake Steamed Bun with Butter Cream hot", "correct"], as: :radio_buttons %>
		<%= f.input :answer2, label: "Question 2", collection: ["wrong", "wrong", "correct", "wrong"], as: :radio_buttons %>
		<%= f.input :answer3, label: "Question 3", collection: ["wrong", "wrong", "correct", "wrong"], as: :radio_buttons %>
		<%= f.input :answer4, label: "Question 4", collection: ["wrong", "wrong", "correct", "wrong"], as: :radio_buttons %>
		<%= f.input :answer5, label: "Question 5", collection: ["wrong", "wrong", "correct", "wrong"], as: :radio_buttons %>
		<div class="text-center">
			<% if @quiz.errors.any? %>
				<%= link_to "Back", intro_info_path, id: 'back-btn', class: 'btn btn-default' %>
			<% end %>
			<%= f.button :submit, "Submit Quiz", class: 'btn-yellow btn-lg' %>
		</div>
	<% end %>

</div>

