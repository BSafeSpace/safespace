<% content_for :top_content do %>
  <div class="jumbotron homepage">
    <div class="container vertical-center">
      <div class="my-header">SafeSpace</div>
      
      <div class="tagline">An anonymous, peer-led chat for UC Berkeley undergraduates <br> to share their experiences with other students when pursuing mental wellness.</div>
      <% if !user_signed_in? %>
        <div class="my-button">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>











