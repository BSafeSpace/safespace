<div class="char-section">
  <h5 style="display: inline-block">
  	<strong><%= name %></strong>
  </h5>
  <%= fields_for :preferences do |p| %>
  	<%= p.select :"#{category}", ['0', '1', '2', '3', '4'], {}, { :class => 'btn btn-default dropdown-toggle dropdown-pref' } %>
  <% end %>

  <div class="filter-box-scroll custom-scroll">
    <%= f.collection_check_boxes :characteristics_id_in_any, Characteristic.where('category = ?', "#{category}").reject{ |c| c.name == "Prefer to omit from personal profile" || c.name == "No specifics: seeking out peers"}, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label :class => "char-option" %>
      </div>
    <% end %>
  </div>
</div>