<%= form_for @profile do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render '/profiles/new_vars' %>

  <div style="margin-top: 15px; margin-bottom: 20px">
    <div class="row">
      <div class="col-md-4 col-sm-offset-2">
        <div class="char-box">
          <h4><strong>Characteristics</strong></h4>
          <%= render 'profiles/show_partials/edit_characteristic', title: "Mental Health", name: "mental_health", f: f, id: "edit-mental-health" %>
          <%= render 'profiles/show_partials/edit_characteristic', title: "Gender", name: "gender", f: f, id: "edit-gender" %>
          <%= render 'profiles/show_partials/edit_characteristic', title: "Ethnicity", name: "ethnicity", f: f, id: "edit-ethnicity" %>
          <%= render 'profiles/show_partials/edit_characteristic', title: "Academic Focus", name: "academic_focus", f: f, id: "edit-academic-focus" %>
          <%= render 'profiles/show_partials/edit_characteristic', title: "Sexual Orientation", name: "sexual_orientation", f: f, id: "edit-sexual-orientation" %>
        </div><br>
        <div class="actions">
          <%= link_to 'Back', @profile , class: 'btn btn-default' %>
          <%= f.submit "Update", class: 'btn btn-primary' %>
        </div>
      </div>

      <div class="col-md-4">
        <div class="profile-box">
          <h4><strong>Information</strong></h4>
          <div class="basic-info char-option">
            <p class="char-edit">
              <%= f.label :age, :class => "char-field-title" %>
              <%= f.number_field :age, class: "form-control age-field" %>
            </p>

            <%= render 'profiles/show_partials/edit_basic_info_char', title: "Class standing", name: "class_rank", f: f %>
            <%= render 'profiles/show_partials/edit_basic_info_char', title: "Socioeconomic status", name: "socioeconomic_status", f: f %>
            <%= render 'profiles/show_partials/edit_basic_info_char', title: "Religion", name: "religion", f: f %>
            <%= render 'profiles/show_partials/edit_basic_info_char', title: "Living situation", name: "living_situation", f: f %>
            

          </div>
          
          <div class="basic-info char-option"> 
            <p class="char-edit">
              <%= f.check_box :is_transfer_student %>
              <%= f.label "Transfer student", :class => "char-field-title" %>
            </p>

            <p class="char-edit">
                <%= f.check_box :is_first_generation_college_student %>
                <%= f.label "First generation college student", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_physically_disabled %>
              <%= f.label "Physically disabled", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_parent %>
              <%= f.label "Parent", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_single_parent %>
              <%= f.label "Single Parent", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_from_foster_care %>
              <%= f.label "From foster care", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_intercollegiate_athlete %>
              <%= f.label "Intercollegiate athlete", :class => "char-field-title" %><br>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_military %>
              <%= f.label "Military", :class => "char-field-title" %>
            </p>
            
            <p class="char-edit">
              <%= f.check_box :is_out_of_state_student %>
              <%= f.label "Out of state student", :class => "char-field-title" %>
            </p>
          
            <p class="char-edit">
              <%= f.check_box :is_international_student %>
              <%= f.label "International Student", :class => "char-field-title" %>
            </p>
            
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


  