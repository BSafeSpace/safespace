        <%= b.check_box %>
        <%= b.label :class => "char-option" %>
      </div>
    <% end %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions" style="margin-bottom: 20px">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>


  