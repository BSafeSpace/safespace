<%= devise_error_messages! %>
<div class="border-form-div border-big">
  <div class="form-header">
    <h3 class="modal-title header-icon">
      Join SafeSpace!
    </h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.text_field :username, placeholder: 'choose a username', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: 'email', class: 'form-control' %>
    </div>

    <%= icon('question-circle', id: 'email-tooltip') %>

    <!-- <div id="email-tooltip">
      Why?
    </div> -->

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'password', autocomplete: "off", class: 'form-control' %>
      <% if @validatable %>
        <!-- <span class="help-block"><%= @minimum_password_length %> characters minimum</span> -->
      <% end %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: 'verify password', autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="submit-button"><%= f.submit "Sign up", class: 'btn btn-primary btn-block' %></div>

  <div class="links">
    <%= render "devise/shared/links" %>
    <div class="counselor-sign-up">
      <%= link_to "Peer Counselor? Click here", 'javascript:;', id: 'counselor-link' %>
      <%= f.text_field :passcode, placeholder: 'enter passcode', class: 'form-control', id: 'counselor-passcode' %>
    </div>
  </div>
  <% end %>
</div>